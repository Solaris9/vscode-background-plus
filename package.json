{
  "name": "background-plus",
  "displayName": "Background+",
  "publisher": "solaris",
  "author": "solaris",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "background-plus.add",
        "title": "Background+: Add a custom background item"
      },
      {
        "command": "background-plus.install",
        "title": "Background+: Install custom background CSS"
      },
      {
        "command": "background-plus.uninstall",
        "title": "Background+: Uninstall custom background CSS"
      },
      {
        "command": "background-plus.select",
        "title": "Background+: Select a background from the images list"
      },
      {
        "command": "background-plus.opacity",
        "title": "Background+: Change the opacity of the background image"
      },
      {
        "command": "background-plus.selected-opacity",
        "title": "Background+: Change the opacity of the selected background image"
      }
    ],
    "configuration": {
      "title": "background-plus",
      "properties": {
        "background-plus.mode": {
          "type": "string",
          "description": "Fullscreen mode covers the entire window, editor mode covers each editor.",
          "default": "fullscreen",
          "anyOf": [
            "fullscreen",
            "editor"
          ]
        },
        "background-plus.selected": {
          "type": "string",
          "description": "Use a specific image, this overrides carousel."
        },
        "background-plus.carousel": {
          "title": "Carousel, only enabled if interval is greater than 0.",
          "type": "object",
          "properties": {
            "interval": {
              "type": "number",
              "description": "How long should each image be shown?",
              "default": 0
            },
            "unique": {
              "type": "boolean",
              "description": "If using editor mode, should each editor be a unique image?",
              "default": true
            }
          }
        },
        "background-plus.style": {
          "type": "object",
          "default": {
            "opacity": 0.85,
            "background-size": "cover",
            "background-position": "center",
            "background-repeat": "no-repeat"
          }
        },
        "background-plus.images": {
          "type": "array",
          "default": [],
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "The name of this image."
              },
              "url": {
                "type": "string",
                "pattern": "^(https?|file)://",
                "description": "The URI path for this image, a http resource or a local file."
              },
              "style": {
                "type": ["null", "object"],
                "default": {
                  "opacity": 0.85,
                  "background-size": "cover",
                  "background-position": "center",
                  "background-repeat": "no-repeat"
                }
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.79.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
